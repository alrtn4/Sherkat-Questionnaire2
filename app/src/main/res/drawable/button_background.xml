<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/DarkRed"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/black"/>
            <corners
                android:radius="6dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/DarkRed"
                android:startColor="@color/DarkGoldenRod"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/black"/>
            <corners
                android:radius="7dp"/>
        </shape>
    </item>
</selector>